# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database Configuration
# For local development with Railway PostgreSQL (optional - can use SQLite for local dev)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Redis Configuration (for Celery and Cache)
# For local development, use localhost Redis (default: redis://localhost:6379)
# If you have Redis running locally, you can leave these empty (defaults to localhost)
# For Railway production, Railway automatically sets REDIS_URL
REDIS_URL=redis://localhost:6379
# Optional: Explicit Celery URLs (will use REDIS_URL if not set)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0
# REDIS_CACHE_URL=redis://localhost:6379/1

# Email / SMTP Settings (Legacy - not used when using Resend)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
EMAIL_TIMEOUT=15
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=no-reply@ongtrucking.com
SERVER_EMAIL=your-email@gmail.com
SUPPORT_EMAIL=support@ongtrucking.com

# Resend Email Settings
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=Acme <onboarding@trucking.jeronpos.com>

# Frontend configuration for Djoser activation links
FRONTEND_DOMAIN=localhost:3000
FRONTEND_PROTOCOL=http
SITE_NAME=Ong Trucking